# some ls aliases
alias ls='ls -G' # color, the GNU way. The BSD way (non-GNU coreutils) is 'ls -G'
alias ll='ls -alFG'
alias la='ls -AG'
alias l='ls -CFG'
################################



################################
# Directory navigation

alias ..='cd ..'

# move up directories quickly
up ()
{
  [ "$#" -eq 1 -a "$1" -gt 0 ] || { echo 'Usage: up <number of directories up>'; return 1; }

  up=""
  for (( i = 1; i <= $1; i++));
  do 
    up="$up../"
  done
  cd $up 
}

mkd() {
  mkdir "$1" &&
  cd "$1"
}
